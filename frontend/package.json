{
  "name": "movie-recommendation-frontend",
  "version": "1.0.0",
  "description": "Frontend for Movie Recommendation API",
  "scripts": {
    "build:css": "sass src/scss/main.scss dist/css/main.css",
    "watch:css": "sass --watch src/scss/main.scss dist/css/main.css",
    "build": "npm run build:css && cp src/js/main.js dist/js/main.js",
    "dev": "npm run watch:css",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "movie",
    "recommendation",
    "frontend"
  ],
  "devDependencies": {
    "sass": "^1.69.5"
  }
}
